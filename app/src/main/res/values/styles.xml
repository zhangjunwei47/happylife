<resources>

    <style name="AppThemeNotFullscreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>
    
    <style name="libraryTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/libraryTab</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>
    
    <style name="libraryTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


</resources>
