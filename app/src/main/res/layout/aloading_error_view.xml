<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_load_fail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_trans100_rectangle"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="center"
        android:src="@mipmap/no_net_error_icon" />

    <TextView
        android:id="@+id/tv_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_load_fail"
        android:drawablePadding="@dimen/standard_margin"
        android:gravity="center"
        android:text="@string/timeout_try_again"
        android:textColor="@color/gray_9_color"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_load_fail"
        android:background="@drawable/selector_net_retry"
        android:paddingBottom="@dimen/standard_small_margin"
        android:paddingLeft="@dimen/standard_margin"
        android:paddingRight="@dimen/standard_margin"
        android:paddingTop="@dimen/standard_small_margin"
        android:text="@string/click_to_retry"
        android:textColor="@color/net_retry_text_selector"
        android:textSize="@dimen/middle_text_size"
        android:visibility="gone" />

</LinearLayout>