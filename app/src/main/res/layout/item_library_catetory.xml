<?xml version="1.0" encoding="utf-8"?>
<com.txznet.music.home.library.CategoryItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_category_item"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/library_category_text_margin_left"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/library_category_text_size"/>

</com.txznet.music.home.library.CategoryItemView>
